{
    "version": 4,
    "configurations": [
        {
            "name": "macOS",
            "includePath": [
                "${workspaceFolder}/**",
                "/opt/homebrew/include",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
                "/usr/local/include"
            ],
            "defines": [
                "APPLE",
                "MACOS"
            ],
            "compilerPath": "/opt/homebrew/bin/g++-14",  // Ensure this is correct
            "cStandard": "c11",
            "cppStandard": "c++17", // Adjust as needed
            "intelliSenseMode": "gcc-x64"
        }
    ]
}
